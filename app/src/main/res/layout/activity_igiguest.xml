<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.isummit.om.developers.GuestInfoDialogActivity">


    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imageView2_igi"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:src="@drawable/indira_logo" />

    <TextView
        android:id="@+id/tv_gname_igi"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView2_igi"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/imageView2_igi"
        android:text="Guest Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_desig_igi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/imageView2_igi"
        android:text="designation"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_company_igi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/imageView2_igi"
        android:text="Comany Name is here"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/imgviews_igi"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="20dp"


        android:src="@drawable/ssingle_tick" />

    <TextView
        android:id="@+id/txtview_igi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_alignTop="@+id/imgviews_igi"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/imgviews_igi"
        android:text="not checked in" />

    <android.support.v7.widget.CardView
        android:id="@+id/btnOk_igi"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
      android:layout_marginTop="220dp"

        android:gravity="center_horizontal"
        android:onClick="closeDialog"
        app:cardBackgroundColor="@color/Orange"
        app:cardCornerRadius="25dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"

        android:text="@string/zxing_button_ok"
        android:textSize="17dp" />
</RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>