<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_black"
    tools:context="com.isummit.om.sample.IGIGuestActivity">


    <com.github.siyamed.shapeimageview.CircularImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/indira_logo"
        android:layout_margin="16dp"
        android:id="@+id/imageView2_igi" />

    <TextView
        android:id="@+id/tv_gname_igi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_desig_igi"
        android:layout_alignTop="@+id/imageView2_igi"
        android:layout_marginTop="20dp"
        android:text="Guest Name"
        android:textColor="@color/WHITE"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gname_igi"
        android:layout_toEndOf="@+id/imageView2_igi"
        android:layout_margin="10dp"
        android:text="designation"
        android:textColor="@color/WHITE"
        android:textSize="15dp"
        android:id="@+id/tv_desig_igi" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2_igi"
        android:text="Comany Name is here"
        android:textColor="@color/WHITE"
        android:layout_margin="16dp"
        android:textSize="20dp"
        android:id="@+id/tv_company_igi" />



    <ImageView
        android:id="@+id/imgviews_igi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:maxHeight="40dp"
        android:layout_below="@+id/tv_company_igi"
        android:src="@drawable/ssingle_tick"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/txtview_igi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_company_igi"
        android:text="Not Checked IN"
        android:textColor="@color/WHITE"
        android:textSize="20dp"
        android:layout_toRightOf="@id/imgviews_igi"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="8dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/btnOk_igi"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/tv_desig_igi"
        android:layout_below="@+id/txtview_igi"
        android:layout_marginStart="13dp"
        android:layout_marginTop="37dp"
        android:gravity="center_horizontal"
        android:onClick="closeDialog"
        app:cardBackgroundColor="@color/Purple"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="start"
                android:text="OK"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>