<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isummit.om.sample.summit11">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_below="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/image"
        android:layout_marginEnd="17dp" />




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_margin="25dp"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="vertical">


            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="17dp"
                android:text="Date of Event"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:layout_below="@+id/view"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Loading data..."
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_below="@+id/textView12"
                android:layout_alignParentStart="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_above="@+id/textView14"
                android:layout_marginBottom="-15dp"
                android:background="@color/cardview_dark_background"/>
            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Theme of 3i summit 2011"
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Loading data..."
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_above="@+id/textView16"
                android:layout_marginBottom="-15dp"
                android:background="@color/cardview_dark_background"/>
            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/theme"
                android:layout_marginTop="24dp"
                android:text="Venue"
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Loading data..."
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_below="@+id/textView16"
                android:layout_alignParentStart="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_above="@+id/textView18"
                android:layout_marginBottom="-15dp"
                android:background="@color/cardview_dark_background"/>
            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="Speakers"
                android:textAlignment="textStart"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/text18"
                android:background="@color/cardview_dark_background"
                android:id="@+id/view" />

            <TextView
                android:id="@+id/TextViews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView18"
                android:layout_marginTop="14dp"
                android:nestedScrollingEnabled="true"
                android:paddingBottom="50dp"
                android:text="Loading data..."
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp" />



        </RelativeLayout>
    </ScrollView>

    </RelativeLayout>
</RelativeLayout>
