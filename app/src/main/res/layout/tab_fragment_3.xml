<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/royalblue_bg2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardAlumni"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/light_black">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alumni Agenda"
            android:textSize="25dp"
            android:textColor="@color/WHITE"
            android:textAlignment="center"
            android:layout_margin="60dp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardSummit"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignStart="@+id/cardAlumni"
        android:layout_below="@+id/cardAlumni"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/light_black">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="60dp"
            android:text="3i Summit Agenda"
            android:textSize="25dp"
            android:textColor="@color/WHITE"
            android:textAlignment="center"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>

    </ScrollView>
</RelativeLayout>
